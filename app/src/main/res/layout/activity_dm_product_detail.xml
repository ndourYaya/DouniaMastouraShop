<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_margin="5dp"
    tools:context="com.douniamastoura.macndour.douniamastourashop.DmProductDetailActivity">

    <TextView
        android:id="@+id/tv_product_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Nom Produit"
        android:gravity="center"
        android:textAppearance="@android:style/TextAppearance.DeviceDefault.Large"
        android:textStyle="bold|italic"

        />

    <ImageView
        android:layout_below="@+id/tv_product_name"
        android:layout_width="fill_parent"
        android:layout_height="200dp"
        android:scaleType="fitXY"
        android:layout_gravity="center"
        android:src="@drawable/cat_abaya"
    />


    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:layout_marginTop="10dp">

        <TextView
            android:id="@+id/tv_product_colors"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="couleurs disponibles ..."/>

        </LinearLayout>

    <TextView
        android:id="@+id/tv_product_description"
        android:layout_width="fill_parent"
        android:layout_height="80dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/border_rectangle"
        android:hint="Description du produit ..."/>

    <Button
        android:id="@+id/btn_buy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ajouter au panier"
        android:layout_gravity="center"/>

</LinearLayout>
